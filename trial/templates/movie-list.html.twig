<h1> {{ title }} </h1>
{{ items['form'] }}
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Movie_name</th>
      <th scope="col">Movie_poster</th>
      <th scope="col">Description</th>
      <th scope="col">Release_date</th>
      <th scope="col">cast</th>
      <th scope="col">ratings</th>
    </tr>
  </thead>
  <tbody>
    {% for item in items %}
      <tr>
        <td><a href={{ item.url_movie }}>{{ item.name }}</td>
        <td><img src=" {{ item.url }}"></td>
        <td>{{ item.desc }}</td>
        <td>{{ item.date }}</td>
        <td>
        {% for x in item.cast %}
          <a href={{ x.urls }}>{{ x.name }}</a>
        {% endfor %}
        </td>
        <td>{{ item.rating }}</td>
      </tr>
    {% endfor %}
  </tbody>
</table>
