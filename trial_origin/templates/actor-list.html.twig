<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Actor name</th>
      <th scope="col">Image</th>
      <th scope="col">Description</th>
      <th scope="col">Rating</th>
      <th scope="col">Recent_movie</th>
    </tr>
  </thead>
  <tbody>
    {% for item in items %}
      <tr class="highlight">
        <td><a href={{ item.actor_url }}>{{ item.name }}</td>
        <td><img src=" {{ item.image_url }}"></td>
        <td>{{ item.about|render|striptags }}</td>
        <td>
        {% if item.rating >= 1 %}
          {% for star in range(1,item.rating) %}
            <span class="fa fa-star checked"></span>
          {% endfor %}
        {% endif %}
        {% if item.halfStarFlag %}
          <i class="fa fa-star-half checked"></i>
        {% endif %}
        </td>
        <td><a href={{ item.movie_url }}>{{ item.recent_movie }}</td>
      </tr>
    {% endfor %}
  </tbody>
</table>
